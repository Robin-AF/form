<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00F7F7F7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/formElementMainLayout"
        style="@style/formMainLayout"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp">

        <include layout="@layout/form_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <include
            layout="@layout/form_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/formElementArrowUp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_form_arrow_up"
            app:tint="#CDCDCD" />
    </LinearLayout>

    <include layout="@layout/form_divider" />
</LinearLayout>
